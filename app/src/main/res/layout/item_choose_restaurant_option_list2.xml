<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="data"
            type="com.sopt.jointseminargroupfour.ui.main.adapter.ChooseRestaurantOptionData" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_option"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/shape_gray_line"
            android:paddingLeft="13dp"
            android:paddingTop="5dp"
            android:paddingRight="27dp"
            android:paddingBottom="5dp"
            android:text="@{data.option}"
            android:textColor="@color/black"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="추천순" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="@+id/tv_option"
            app:layout_constraintEnd_toEndOf="@+id/tv_option"
            app:layout_constraintHorizontal_bias="0.816"
            app:layout_constraintStart_toStartOf="@+id/tv_option"
            app:layout_constraintTop_toTopOf="@+id/tv_option"
            app:srcCompat="@drawable/ic_black_baseline_keyboard_arrow_down_24" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>